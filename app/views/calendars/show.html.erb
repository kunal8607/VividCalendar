<%if params[:older] == 'true'%>
 <h1>Older Events listing</h1>
<%else%>
 <h1>Future Events listing</h1>
<%end%>
<% if @events.empty? %>
<p>No Events to display <%=link_to "View Older Events", calendar_path(@calendar, older: true) %></p>
<%else %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    <tr>
        <td><%= event.title %></td>
        <td><%="From #{event.start_date.strftime('%m/%d/%y at %I:%M%p')} to #{event.end_date.strftime('%m/%d/%y at %I:%M%p')}"%></td>
    </tr>  
    <% end %>
  </tbody>
</table>
<%end%>
