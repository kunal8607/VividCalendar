<!DOCTYPE html>
<html>
  <head>
    <title>VividCalendar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">

      <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-9">
          
             <%= yield %>
         
          <div class="row">
            <div class="col-xs-6 col-lg-4">
            </div><!--/.col-xs-6.col-lg-4-->
          </div><!--/row-->
        </div><!--/.col-xs-12.col-sm-9-->
        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
          <div class="list-group">
            <% if !user_signed_in? %>
              <%= link_to "Sign in", user_google_oauth2_omniauth_authorize_path, class: "list-group-item" %>
            <% else %>
             <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "list-group-item" %>
              <a href="#" class="list-group-item">Sync My Calendar</a>
            <% end %>
          </div>
        </div><!--/.sidebar-offcanvas-->
      </div>
      
      <hr>
      
  </body>
</html>